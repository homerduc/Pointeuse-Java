<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SettingsController">
    <children>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
            <Label text="Settings" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
            <Label text="Adresse IP:"/>
            <TextField fx:id="ipAddressField" promptText="Enter IP Address"/>
            <Label text="Port:"/>
            <TextField fx:id="portField" promptText="Enter Port"/>
            <Button text="Save Settings" onAction="#saveSettings"/>
            <Button text="Cancel" onAction="#cancelSettings"/>
        </VBox>
    </children>
</AnchorPane>
